---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import TechStack from './TechStack.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-24 sm:pt-28 lg:pt-32">
  <div class="absolute inset-0 z-0">
    <div class="absolute top-1/4 left-1/4 w-80 h-80 sm:w-96 sm:h-96 lg:w-[500px] lg:h-[500px] bg-gradient-to-r from-indigo-500/10 to-purple-500/10 rounded-full blur-3xl animate-glow-subtle"></div>
    <div class="absolute bottom-1/4 right-1/4 w-64 h-64 sm:w-80 sm:h-80 lg:w-96 lg:h-96 bg-gradient-to-r from-blue-500/10 to-cyan-500/10 rounded-full blur-3xl animate-glow-subtle" style="animation-delay: 2s;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-20 xl:gap-24 items-center">
        
        <div class="text-center lg:text-left space-y-8 lg:space-y-10">
          <div class="inline-flex items-center px-6 py-3 rounded-full glassmorphism-clean border border-indigo-500/30 hover:border-indigo-400/50 transition-all duration-300">
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse mr-4"></div>
            <span class="text-sm sm:text-base font-medium text-slate-300">
              {t('hero.welcome')} <span class="text-indigo-400 font-bold">{t('hero.name')}</span> {t('hero.and')}
            </span>
          </div>

          <div class="space-y-6">
            <h1 class="text-responsive-xl font-bold font-display leading-tight">
              <span class="block holographic-clean animate-float-clean">
                {t('hero.title')}
              </span>
            </h1>
            
            <div class="text-responsive-md text-slate-400 max-w-2xl mx-auto lg:mx-0">
              <p class="leading-relaxed">
                {t('hero.description')}
              </p>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 lg:gap-6 justify-center lg:justify-start">
            <a 
              href="#projects"
              class="group relative px-8 py-4 rounded-2xl font-semibold text-white overflow-hidden transition-all duration-300 hover:scale-105 btn-clean"
            >
              <span class="relative flex items-center justify-center gap-2">
                {t('hero.viewProjects')}
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </span>
            </a>
            
            <a 
              href="#contact"
              class="px-8 py-4 rounded-2xl font-semibold glassmorphism-clean border border-indigo-500/30 text-slate-200 hover:scale-105 hover:shadow-lg transition-all duration-300 hover:border-indigo-400/50"
            >
              {t('hero.enterContact')}
            </a>
          </div>
        </div>

        <div class="flex flex-col items-center space-y-8 lg:space-y-12">
          <div class="relative group">
            <div class="absolute -inset-4 sm:-inset-6 bg-gradient-to-r from-indigo-500/20 to-purple-500/20 rounded-full blur-2xl opacity-40 group-hover:opacity-60 transition-opacity duration-500"></div>
            
            <div class="relative card-3d">
              <img 
                src="/perfil.png" 
                alt="Isaac Mello" 
                class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 xl:w-80 xl:h-80 rounded-full border-4 border-indigo-500/50 object-cover transform group-hover:scale-105 transition-all duration-500 shadow-2xl"
              />
              
              <div class="absolute -bottom-2 -right-2 sm:-bottom-3 sm:-right-3 w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-green-400 to-emerald-500 rounded-full border-4 dark:border-space-darker light:border-white flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <div class="w-3 h-3 sm:w-4 sm:h-4 bg-white rounded-full animate-pulse"></div>
              </div>

              <div class="absolute -top-4 -left-4 w-8 h-8 sm:w-10 sm:h-10 bg-indigo-500/20 rounded-full flex items-center justify-center animate-float-clean" style="animation-delay: 0s;">
                <img src="/React.svg" alt="React" class="w-5 h-5 sm:w-6 sm:h-6" />
              </div>
              <div class="absolute -top-4 -right-4 w-8 h-8 sm:w-10 sm:h-10 bg-purple-500/20 rounded-full flex items-center justify-center animate-float-clean" style="animation-delay: 1s;">
                <img src="/Typescript.svg" alt="TypeScript" class="w-5 h-5 sm:w-6 sm:h-6" />
              </div>
              <div class="absolute -bottom-4 -left-4 w-8 h-8 sm:w-10 sm:h-10 bg-blue-500/20 rounded-full flex items-center justify-center animate-float-clean" style="animation-delay: 2s;">
                <img src="/Tailwind.svg" alt="Tailwind" class="w-5 h-5 sm:w-6 sm:h-6" />
              </div>
              <div class="absolute -bottom-4 -right-4 w-8 h-8 sm:w-10 sm:h-10 bg-cyan-500/20 rounded-full flex items-center justify-center animate-float-clean" style="animation-delay: 3s;">
                <img src="/JavaScript.svg" alt="JavaScript" class="w-5 h-5 sm:w-6 sm:h-6" />
              </div>
            </div>
          </div>

          <div class="w-full max-w-lg">
            <TechStack />
          </div>
        </div>
      </div>
    </div>
</section>
