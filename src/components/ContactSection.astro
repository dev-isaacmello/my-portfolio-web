---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import ContactLink from './ContactLink.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const contacts = [
  {
    title: t('contact.github'),
    link: 'https://github.com/dev-isaacmello',
    icon: '/logogithub.svg',
  },
  {
    title: t('contact.linkedin'),
    link: 'https://www.linkedin.com/in/isaac-mello-168404281/',
    icon: '/Linkedin.svg',
  },
  {
    title: t('contact.whatsapp'),
    link: 'https://api.whatsapp.com/send?phone=5551995894049',
    icon: '/Whatsapp.svg',
  },
  {
    title: t('contact.email'),
    icon: '/email.svg',
  },
];
---

<section id="contact" class="py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-blue-900/5 to-transparent pointer-events-none"></div>
  
  <div class="container mx-auto max-w-4xl relative">
    <div class="text-center space-y-4 sm:space-y-6 mb-12 sm:mb-16 lg:mb-20">
      <div class="inline-flex items-center px-6 py-3 rounded-full glassmorphism-advanced border border-blue-500/30 hover:border-blue-400/50 transition-all duration-300">
        <div class="w-3 h-3 bg-blue-400 rounded-full animate-pulse mr-4"></div>
        <p class="text-blue-400 text-sm sm:text-base font-semibold tracking-wider uppercase">
          {t('contact.header')}
        </p>
      </div>
      
      <h2 class="text-responsive-lg font-bold font-display leading-tight">
        <span class="holographic">
          {t('contact.title')}
        </span>
      </h2>
      
      <p class="text-slate-400 text-responsive-md max-w-2xl mx-auto leading-relaxed">
        {t('contact.description')}
      </p>
      
      <div class="w-16 sm:w-24 h-1 bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500 mx-auto rounded-full"></div>
    </div>

    <div class="space-y-4 sm:space-y-6">
      {contacts.map((contact, index) => (
        <div 
          class="transform transition-all duration-500 hover:scale-105"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <ContactLink {...contact} />
        </div>
      ))}
    </div>
  </div>
</section>
