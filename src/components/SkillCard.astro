---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="skill-card card-clean card-3d glassmorphism-clean rounded-3xl p-4 sm:p-6 lg:p-8 bg-slate-900/50 h-full transform transition-all duration-300 hover:-translate-y-2 hover:scale-105 group">
  <div class="card-glow"></div>
  
  <div class="flex flex-col items-start space-y-4 sm:space-y-6 h-full">
    <div class="relative">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-500 to-blue-500 rounded-2xl blur-2xl opacity-20 group-hover:opacity-40 transition-opacity duration-300"></div>
      <div class="relative glassmorphism-clean rounded-2xl p-3 sm:p-4 border border-purple-500/30 transform group-hover:rotate-3 transition-transform duration-300 hover:border-purple-400/50">
        <img 
          src={icon} 
          alt={title}
          class="w-10 h-10 sm:w-12 sm:h-12 lg:w-14 lg:h-14"
        />
      </div>
    </div>

    <div class="space-y-3 sm:space-y-4 flex-grow">
      <h3 class="text-lg sm:text-xl lg:text-2xl font-bold font-display text-contrast group-hover:text-white transition-colors duration-300 leading-tight">
        {title}
      </h3>

      <p class="text-slate-400 text-sm sm:text-base leading-relaxed">
        {description}
      </p>
    </div>

    <div class="w-full h-1 bg-gradient-to-r from-purple-500 via-indigo-500 to-blue-500 rounded-full opacity-50 group-hover:opacity-100 transition-opacity duration-300 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent animate-pulse"></div>
    </div>
  </div>
</div>
