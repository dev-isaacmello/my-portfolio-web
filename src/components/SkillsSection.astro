---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import SkillCard from './SkillCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const skills = [
  {
    title: t('skill.1.title'),
    description: t('skill.1.description'),
    icon: '/lamp.svg',
  },
  {
    title: t('skill.2.title'),
    description: t('skill.2.description'),
    icon: '/project.svg',
  },
  {
    title: t('skill.3.title'),
    description: t('skill.3.description'),
    icon: '/paint.svg',
  },
];
---

<section id="skills" class="py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-white/5 to-transparent pointer-events-none"></div>
  
  <div class="container mx-auto max-w-7xl relative">
    <div class="text-center space-y-4 sm:space-y-6 mb-12 sm:mb-16 lg:mb-20">
      <div class="inline-flex items-center px-6 py-3 rounded-full glassmorphism-clean border border-white/30 hover:border-white/50 transition-all duration-300">
        <div class="w-3 h-3 bg-black dark:bg-white rounded-full animate-pulse mr-4"></div>
        <p class="dark:text-white light:text-black text-sm sm:text-base font-semibold tracking-wider uppercase">
          {t('skills.header')}
        </p>
      </div>
      
      <h2 class="text-responsive-lg font-bold font-display leading-tight">
        <span class="holographic">
          {t('skills.title')}
        </span>
      </h2>
      
      <div class="w-16 sm:w-24 h-1 dark:bg-white bg-black mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {skills.map((skill, index) => (
        <div 
          class="transform transition-all duration-500 hover:scale-105"
          style={`animation-delay: ${index * 0.2}s`}
        >
          <SkillCard {...skill} />
        </div>
      ))}
    </div>
  </div>
</section>
