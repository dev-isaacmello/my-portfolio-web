---
import { Icon } from 'astro-icon/components';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const technologies = [
  { name: 'C#', icon: 'simple-icons:csharp', color: 'from-purple-500 to-indigo-500' },
  { name: 'Python', icon: 'logos:python', color: 'from-yellow-500 to-green-500' },
  { name: 'Java', icon: 'logos:java', color: 'from-red-500 to-orange-500' },
  { name: 'Flutter', icon: 'logos:flutter', color: 'from-blue-400 to-cyan-500' },
  { name: 'Dart', icon: 'logos:dart', color: 'from-blue-500 to-cyan-500' },
  { name: 'TypeScript', icon: 'logos:typescript-icon', color: 'from-blue-600 to-indigo-600' },
  { name: 'React', icon: 'logos:react', color: 'from-cyan-400 to-blue-500' },
  { name: 'Next.js', icon: 'logos:nextjs-icon', color: 'from-gray-700 to-gray-900' },
  { name: 'Tailwind CSS', icon: 'logos:tailwindcss-icon', color: 'from-cyan-400 to-blue-500' },
  { name: 'Astro', icon: 'logos:astro-icon', color: 'from-orange-500 to-red-500' },
  { name: 'Git', icon: 'logos:git-icon', color: 'from-red-500 to-orange-500' },
  { name: 'PostgreSQL', icon: 'logos:postgresql', color: 'from-blue-500 to-cyan-500' },
  { name: 'Docker', icon: 'logos:docker-icon', color: 'from-blue-400 to-cyan-500' },
  { name: 'AWS', icon: 'logos:aws', color: 'from-orange-500 to-yellow-500' },
  { name: 'IA', icon: 'mdi:brain', color: 'from-purple-500 to-indigo-500' },
];
---

<div class="w-full">
  <div class="">
    <div class="text-center mb-6 sm:mb-8">
      <h3 class="text-lg sm:text-xl font-semibold text-slate-200 mb-3 glow-text-clean">{t('techStack.title')}</h3>
      <div class="w-16 sm:w-20 h-1 bg-gradient-to-r from-white to-white mx-auto rounded-full"></div>
    </div>
    
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-5 gap-4 sm:gap-6">
      {technologies.map((tech, index) => (
        <div 
          class="tech-item flex flex-col items-center gap-3 group cursor-pointer transform transition-all duration-600 hover:scale-105"
          style={`animation-delay: ${index * 0.3}s`}
        >
          <div class="relative">
            <div class={`absolute inset-0 bg-gradient-to-br ${tech.color} rounded-full blur-xl opacity-0 group-hover:opacity-40 transition-opacity duration-300`}></div>
            <div class="relative glassmorphism-clean rounded-full p-10 sm:p-2 border border-white/30 transform group-hover:rotate-3 transition-all duration-300 hover:border-white/50">
              <Icon 
                name={tech.icon} 
                class="w-8 h-8 sm:w-10 sm:h-10"
              /> 
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
