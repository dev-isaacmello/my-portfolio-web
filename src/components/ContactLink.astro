---
interface Props {
  title: string;
  link?: string;
  icon: string;
}

const { title, link, icon } = Astro.props;
const Tag = link ? 'a' : 'div';
---

<Tag
  href={link}
  target={link ? "_blank" : undefined}
  rel={link ? "noopener noreferrer" : undefined}
  class="contact-link card-clean glassmorphism-clean rounded-2xl px-4 sm:px-6 py-4 sm:py-5 flex items-center gap-4 bg-slate-900/50 w-full max-w-md mx-auto transform transition-all duration-300 hover:scale-105 group"
>
  <div class="card-glow"></div>
  
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-blue-500 rounded-xl blur-lg opacity-0 group-hover:opacity-30 transition-opacity duration-300"></div>
    <div class="relative glassmorphism-clean rounded-xl p-3 border border-indigo-500/30 hover:border-indigo-400/50 transition-all duration-300">
      <img 
        src={icon} 
        alt={title}
        class="w-5 h-5 sm:w-6 sm:h-6 transform group-hover:scale-110 group-hover:rotate-12 transition-all duration-300"
      />
    </div>
  </div>
  
  <span class="text-slate-200 font-medium flex-grow text-left group-hover:text-indigo-400 transition-colors duration-300 text-sm sm:text-base">
    {title}
  </span>

  {link && (
    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-indigo-400 transform group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
    </svg>
  )}
</Tag>
