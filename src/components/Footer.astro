---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="py-12 border-t border-white/10 mt-20 glassmorphism">
  <div class="container mx-auto px-6">
    <div class="text-center space-y-6">
      <div class="flex justify-center gap-6">
        <a href="https://github.com/dev-isaacmello" target="_blank" rel="noopener noreferrer" class="group">
          <div class="glassmorphism rounded-full p-3 border border-indigo-500/30 hover:scale-110 transition-all duration-300">
            <img src="/logogithub.svg" alt="GitHub" class="w-6 h-6" />
          </div>
        </a>
        <a href="https://www.linkedin.com/in/isaac-mello-168404281/" target="_blank" rel="noopener noreferrer" class="group">
          <div class="glassmorphism rounded-full p-3 border border-indigo-500/30 hover:scale-110 transition-all duration-300">
            <img src="/Linkedin.svg" alt="LinkedIn" class="w-6 h-6" />
          </div>
        </a>
        <a href="https://api.whatsapp.com/send?phone=5551995894049" target="_blank" rel="noopener noreferrer" class="group">
          <div class="glassmorphism rounded-full p-3 border border-indigo-500/30 hover:scale-110 transition-all duration-300">
            <img src="/Whatsapp.svg" alt="WhatsApp" class="w-6 h-6" />
          </div>
        </a>
      </div>
      
      <div class="h-px w-32 bg-gradient-to-r from-transparent via-indigo-500 to-transparent mx-auto"></div>
      
      <p class="text-slate-300 font-medium">
        {t('footer.rights')}
      </p>
      
      <div class="flex justify-center gap-3 text-xs text-slate-400 flex-wrap">
        <span>{t('footer.rightsDescription')}</span>
      </div>
    </div>
  </div>
</footer>
